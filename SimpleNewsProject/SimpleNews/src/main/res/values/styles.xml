<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionOverflowButtonStyle" tools:targetApi="11">@style/OverflowActionBar11</item>
        <item name="actionOverflowButtonStyle">@style/OverflowActionBar</item>

        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_back</item>
        <item name="homeAsUpIndicator" >@drawable/ic_back</item>

        <item name="android:actionModeStyle" tools:targetApi="14">@style/ContextualBar14</item>
        <item name="actionModeStyle">@style/ContextualBar</item>

        <item name="android:titleTextStyle" tools:targetApi="13">@style/TitleTextStyle13</item>
        <item name="titleTextStyle">@style/TitleTextStyle</item>

        <item name="android:actionBarStyle" tools:targetApi="13">@style/ActionBarStyle13</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ContextualBar" parent="android:style/Widget.Holo.ActionMode">
        <item name="actionMenuTextColor">#ffffff</item>
    </style>

    <style name="ContextualBar14" parent="android:style/Widget.Holo.ActionMode" tools:targetApi="11">
        <item name="android:actionMenuTextColor">#ffffff</item>
    </style>

    <style name="ActionBarStyle13" tools:targetApi="13" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/TitleTextStyle13</item>
    </style>

    <style name="TitleTextStyle13" tools:targetApi="13" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="OverFlow11" tools:targetApi="11" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>
    <style name="OverFlow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="OverflowActionBar11" tools:targetApi="11" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>
    <style name="OverflowActionBar" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="OverflowActionMode11" tools:targetApi="11" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow_light</item>
    </style>
    <style name="OverflowActionMode" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow_light</item>
    </style>


    <style name="ChangeOverflowToDark" parent="@style/AppTheme">
        <item name="android:actionOverflowButtonStyle" tools:targetApi="11">@style/OverflowActionMode11</item>
        <item name="actionOverflowButtonStyle">@style/OverflowActionMode</item>
    </style>

    <style name="ProgressBar.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal"/>
</resources>
